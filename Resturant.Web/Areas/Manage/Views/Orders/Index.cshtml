@model IEnumerable<Restaurant.Web.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Tables</h1>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDateTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-primary col-sm-6" style="margin-left:250px; margin-top:20px;color:white; font-weight:800"
asp-action="Create" asp-area="Manage" asp-controller="Orders">Reserve Your Table</a>

<a class="btn btn-success col-sm-6" style="margin-left:250px; margin-top:20px;color:white; font-weight:800"
asp-action="Create" asp-area="Manage" asp-controller="OrderDetails">Order Food Here!!</a>

<a class="btn btn-secondary col-sm-6" style="margin-left:250px; margin-top:20px;color:white; font-weight:800"
asp-action="Index" asp-area="Manage" asp-controller="OrderDetails">View Order Details</a>
