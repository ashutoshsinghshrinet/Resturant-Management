<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("HeadScripts", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark text-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src = "https://th.bing.com/th/id/OIP.nAov6Qux_uqv4xmPnC4QcAAAAA?pid=ImgDet&rs=1" style="height:60px; padding:10px; margin:auto"></img>
                <a class="navbar-brand" asp-area="" asp-page="/Index" style="color: goldenrod">The Grand Courtyard</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown text-white">
                            <a class="nav-link dropdown-toggle text-white" data-toggle="dropdown" href="#">Manage</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" 
                                   asp-area="Manage" asp-controller="Categories" asp-action="Index">Categories</a>
                                <a class="dropdown-item" 
                                   asp-area="Manage" asp-controller="MenuItems" asp-action="Index">Menu Items</a>
                            </div>
                        </li>
                        <li>
                            <a class="nav-link text-white" 
                                asp-area="Menu" asp-controller="Home" asp-action="Index">The Menu</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2022 - The Grand Courtyard - <a href="https://ashutoshsinghshrinet.github.io/">View My Profile</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>